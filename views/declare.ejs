<body>
    <%- include('./partials/header.ejs') %>

<form class="registration container mt-5 p-4 border rounded" action="/declare" method="POST">
    
    <label class="form-label">Declare an Emergency</label>

    <div class="mb-3">
        <label class="form-label">Current Status of Emergency</label>
          
        <input class="form-check-input" type="radio" id="safe" name="status" value="Safe" required>
        <label class="form-check-label" for="safe">Active</label>

        <input class="form-check-input" type="radio" id="in-danger" name="status" value="In Danger" required>
        <label class="form-check-label" for="in-danger">Inactive</label>

        <input class="form-check-input" type="radio" id="other" name="status" value="other" required>
        <label class="form-check-label" for="other">Other</label>
    </div>
    
    <div class="mb-3">

    </div>

    <div class="mb-3">
        
        <label class="form-label">Location Type</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" id="address_option" name="location_type" value="address_option" required>
            <label class="form-check-label" for="address_option">Address</label>
        </div>
        <!--LOCATION SELECTION-->
        <div id="addressField" class="hidden specific">
            <input type="text" id="addressInput" name="address"><br>
        </div>
        
        <div class="form-check">
            <input class="form-check-input" type="radio" id="map_option" name="location_type" value="map_option" required>
            <label class="form-check-label" for="map_option">Location on Map</label>
        </div>
        <!--MAP SELECTION-->
        <div id="mapField" class="hidden specific " style="height: 400px;"></div>

        <div class="form-check">
            <input class="form-check-input" type="radio" id="my_location" name="location_type" value="my_location_option" required>
            <label class="form-check-label" for="my_location_option">My Location</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" id="no_location_option" name="location_type" value="no_location_option" required>
            <label class="form-check-label" for="no_location_option">No Location Found/Possible</label>
        </div>
    </div>


    <div class="mb-3">
        
        <label class="form-label">Event Type</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" id="address_option" name="location_type" value="address_option" required>
            <label class="form-check-label" for="address_option">School Shooting</label>
        </div>
        
        <div class="form-check">
            <input class="form-check-input" type="radio" id="my_location" name="location_type" value="my_location_option" required>
            <label class="form-check-label" for="my_location_option">Fire / Property Danger </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" id="map_option" name="location_type" value="map_option" required>
            <label class="form-check-label" for="map_option">Assault / Violent Attacks</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" id="no_location_option" name="location_type" value="no_location_option" required>
            <label class="form-check-label" for="no_location_option">Other</label>
        </div>
    </div>

    <div class="mb-3">
        <label for="username" class="form-label">Description</label>
        <input type="text" class="form-control" id="description" name="username" placeholder="Description of Emergency" required>
    </div>
    
    <button type="submit" class="btn btn-primary">Declare Emergency</button>
</form>


